
<div class="container">

 
  <br /><br />
 <h3><font color="#569AAB">New Project</font></h3><br>
  <div class="row">
<div class="col-lg-6"> 
<%= bootstrap_form_for(@project, local: true,:html => { :multipart => true }) do |form| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <%= hidden_field_tag(:user_id,value = @user.id) %>
      <%= hidden_field_tag(:status,value = "InActive") %>
    

  <div class="form-group">
    <%= form.text_field :name,class: 'form-control input-sm' %>
  </div>

  <div class="form-group">
    <%= form.text_field :code, class: 'form-control input-sm' %>
  </div>

  <div class="form-group">
    <%= form.date_select :startdate, class: 'form-control input-sm' %>
  </div>

  <div class="form-group">
    <%= form.date_select :enddate, class: 'form-control input-sm' %>
  </div>

   <div class="form-group">
      <%= fields_for :attachments do |attachment_fields| %>
      <%= attachment_fields.file_field :file %>
      <% end %>
   </div>
    <div class="actions">
    <%= form.hidden_field :status, :value => "InActive" %>
  </div>
  <div class="actions">
    <%= form.hidden_field :credits, :value => 0 %>
  </div>
  <div class="actions">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#otpAuth">
    Create
  </button>
  </div>
  <% end %>
  </div>
  </div>
  <div>




<div class="modal fade" id="otpAuth" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" 
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    OTP
                </h4>
            </div>
            
            <!-- Modal Body -->
            <div class="modal-body">       
                <form role="form" action="/otpauth">
                  <div class="form-group">
                    <label>Enter OTP</label>
                      <input type="text-field" class="form-control"
                      id="otp" />
                  </div>
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>            
         
        </div>
    </div>
</div>




