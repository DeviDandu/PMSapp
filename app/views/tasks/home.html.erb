

<nav class="navbar navbar-default">
   <ul class="nav navbar-nav">
      <li><a href="/tasks/new/<%= @project.id %>">New Task</a></li> 
      <li><a href="/attachment/new/<%= @project.id %>">New Attachment</a></li> 
      <% if current_user %>
      <li><a href="/users/sign_out" data-method="delete" rel="nofollow">LogOut</a></li> 
    <% end %>       
    </ul>
  </div>
</nav>
<div class="container">
<br>

<font color="#2F4F4F"><h3>Welcome <%= current_user.name %></h3></font><br />
<font color="#2F4F4F"><h4>Current Project: <%= @project.name %></h4></font><br />
<font color="#569AAB"><h4>Available Tasks</h4></font>
<div class="row">
<div class="col-md-8">
<table class="table">
  <thead>
    <tr>
      <th><font color="#337ab7">Name</th></font>
      <th><font color="#337ab7">Description</th></font>
      <th><font color="#337ab7">Start Date</th></font>
      <th><font color="#337ab7">End Date</th></font>
       <th><font color="#337ab7">Status</th></font>

      <th></th>
    </tr>
  </thead>

  <tbody>
 <% @tasks.each do |task| %>
      <tr>      
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.startdate %></td>
        <td><%= task.enddate %></td>
        <td><%= task.status %></td>
        <td><%= link_to "Edit", "/edittask/#{task.id}", class: "btn btn-info btn-xs" %></td>
         <td><%= link_to "Delete", "/deletetask/#{task.id}", class: "btn btn-info btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table><br />
</div>
</div>

<div class="col-md-3">
  <font color="#569AAB"><h4>Available Attachments</h4></font>
<table class="table">
  <tbody>
  <% @attachments.each do |attachment| %>
  <tr> 
    <td><%= link_to "#{attachment.file.original_filename}",attachment.file.url %></td>
         <td><%= link_to "Delete", "/deletefile/#{attachment.id}", class: "btn btn-info btn-xs" %></td>
      </tr>
    <br />
    <% end %>
 </div> 
</div>