
<div class="container">
	<br /><br />
 <h3><font color="#569AAB">Forgot your password?</font></h3><br>
  <div class="row">
<div class="col-lg-6"> 


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset password instructions" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
